@page
@model IndexModel
@{
    ViewData["Title"] = "Transport Quote";
    Layout = null; // Use null layout to have full control over the page structure for full screen map
    var airports = Model.Locations.Where(l => l.Type == "Aeropuerto").OrderBy(l => l.Name).ToList();
    var nonAirports = Model.Locations.Where(l => l.Type != "Aeropuerto").OrderBy(l => l.Name).ToList();
    var orderedLocations = Model.Locations.OrderBy(l => l.Name).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
          
    <!-- Custom Map Styles -->
    <link rel="stylesheet" href="~/css/map-styles.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <div class="map-app">
        <aside class="glass-sidebar">
            <div class="sidebar-title">Reserva tu traslado</div>
            <div class="sidebar-section">
                <label for="serviceType">Tipo de servicio <span class="required-indicator">*</span></label>
                <select id="serviceType" required>
                    <option value="" disabled selected>Selecciona una opción</option>
                    <option value="roundtrip">Roundtrip</option>
                    <option value="oneway">One Way</option>
                </select>
            </div>
            <div class="distance-indicator"></div>
            <div class="route-summary-panel">
                <div class="route-summary-header">
                    <span class="route-summary-title">Itinerario</span>
                </div>
                <div class="route-list" id="routeList">
                    <div class="route-stop route-stop--origin" draggable="true">
                        <div class="route-stop-body">
                            <label>Origen <span class="required-indicator">*</span></label>
                            <select id="fromLocation" required>
                                <option value="" disabled selected>Selecciona un punto de partida</option>
                                @foreach (var loc in airports)
                                {
                                    <option value="@loc.Id">@loc.Name</option>
                                }
                                @foreach (var loc in nonAirports)
                                {
                                    <option value="@loc.Id">@loc.Name</option>
                                }
                            </select>
                        </div>
                        <button type="button" class="route-stop-remove" aria-label="Eliminar parada">
                            <span class="material-symbols-rounded">close</span>
                        </button>
                        <div class="route-stop-handle"></div>
                    </div>
                    <div class="route-stop route-stop--destination" draggable="true">
                        <div class="route-stop-body">
                            <label>Destino <span class="required-indicator">*</span></label>
                            <select id="toLocation" required>
                                <option value="" disabled selected>Selecciona un destino</option>
                                @foreach (var loc in orderedLocations)
                                {
                                    <option value="@loc.Id">@loc.Name</option>
                                }
                            </select>
                        </div>
                        <button type="button" class="route-stop-remove" aria-label="Eliminar parada">
                            <span class="material-symbols-rounded">close</span>
                        </button>
                        <div class="route-stop-handle"></div>
                    </div>
                </div>
                <div class="route-stop-add">
                    <label for="addStopSelect">Agregar parada</label>
                    <select id="addStopSelect">
                        <option value="">Selecciona un punto intermedio</option>
                        @foreach (var loc in orderedLocations)
                        {
                            <option value="@loc.Id">@loc.Name</option>
                        }
                    </select>
                </div>
                <button type="button" class="quote-button">Generar cotización</button>
            </div>
            <script type="text/template" id="route-location-options">
                <option value="" disabled selected>Selecciona un lugar</option>
                @foreach (var loc in orderedLocations)
                {
                    <option value="@loc.Id">@loc.Name</option>
                }
            </script>
        </aside>
        <div class="quote-panel hidden" id="quotePanel">
            <div class="quote-panel-header">
                <h2>Resumen de cotización</h2>
                <button type="button" class="quote-panel-close" aria-label="Cerrar panel">
                    <span class="material-symbols-rounded">close</span>
                </button>
            </div>
            <div class="quote-panel-body">
            </div>
        </div>
        <div class="map-area">
            <div id="map"></div>
        </div>
    </div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <!-- Custom Map Logic -->
    <script src="~/js/map-logic.js"></script>

    <script>
        // Serialize C# model data to JSON and pass to JS function
        var locations = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Locations, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }));
        
        // Wait for map logic to load then init markers
        window.addEventListener('load', function() {
            if (window.initMapMarkers) {
                window.initMapMarkers(locations);
            }
        });
    </script>
</body>
</html>
