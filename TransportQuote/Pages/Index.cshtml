@page
@model IndexModel
@{
    ViewData["Title"] = "Transport Quote";
    Layout = null; // Use null layout to have full control over the page structure for full screen map
    var airports = Model.Locations.Where(l => l.Type == "Aeropuerto").OrderBy(l => l.Name).ToList();
    var nonAirports = Model.Locations.Where(l => l.Type != "Aeropuerto").OrderBy(l => l.Name).ToList();
    var orderedLocations = Model.Locations.OrderBy(l => l.Name).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
          
    <!-- Custom Map Styles -->
    <link rel="stylesheet" href="~/css/map-styles.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <div class="map-app">
        <aside class="glass-sidebar">
            <div class="sidebar-title">Reserva tu traslado</div>
            <div class="sidebar-section">
                <label for="serviceType">Tipo de servicio <span class="required-indicator">*</span></label>
                <select id="serviceType" required>
                    <option value="" disabled selected>Selecciona una opción</option>
                    <option value="roundtrip">Roundtrip</option>
                    <option value="oneway">One Way</option>
                </select>
            </div>
            <div class="distance-indicator"></div>
            <div class="route-summary-panel">
                <div class="route-summary-header">
                    <span class="route-summary-title">Itinerario</span>
                </div>
                <div class="route-list" id="routeList">
                    <div class="route-stop route-stop--origin" draggable="true">
                        <div class="route-stop-body">
                            <label>Origen <span class="required-indicator">*</span></label>
                            <select id="fromLocation" required>
                                <option value="" disabled selected>Selecciona un punto de partida</option>
                                @foreach (var loc in airports)
                                {
                                    <option value="@loc.Id">@loc.Name</option>
                                }
                                @foreach (var loc in nonAirports)
                                {
                                    <option value="@loc.Id">@loc.Name</option>
                                }
                            </select>
                        </div>
                        <button type="button" class="route-stop-remove" aria-label="Eliminar parada">
                            <span class="material-symbols-rounded">close</span>
                        </button>
                        <div class="route-stop-handle"></div>
                    </div>
                    <div class="route-stop route-stop--destination" draggable="true">
                        <div class="route-stop-body">
                            <label>Destino <span class="required-indicator">*</span></label>
                            <select id="toLocation" required>
                                <option value="" disabled selected>Selecciona un destino</option>
                                @foreach (var loc in orderedLocations)
                                {
                                    <option value="@loc.Id">@loc.Name</option>
                                }
                            </select>
                        </div>
                        <button type="button" class="route-stop-remove" aria-label="Eliminar parada">
                            <span class="material-symbols-rounded">close</span>
                        </button>
                        <div class="route-stop-handle"></div>
                    </div>
                </div>
                <div class="route-stop-add">
                    <label for="addStopSelect">Agregar parada</label>
                    <select id="addStopSelect">
                        <option value="">Selecciona un punto intermedio</option>
                        @foreach (var loc in orderedLocations)
                        {
                            <option value="@loc.Id">@loc.Name</option>
                        }
                    </select>
                </div>
                <button type="button" class="quote-button">Generar cotización</button>
            </div>
            <script type="text/template" id="route-location-options">
                <option value="" disabled selected>Selecciona un lugar</option>
                @foreach (var loc in orderedLocations)
                {
                    <option value="@loc.Id">@loc.Name</option>
                }
            </script>
        </aside>
        <div class="quote-panel hidden" id="quotePanel">
            <div class="quote-panel-header">
                <h2>Resumen de cotización</h2>
                <button type="button" class="quote-panel-close" aria-label="Cerrar panel">
                    <span class="material-symbols-rounded">close</span>
                </button>
            </div>
            <div class="quote-panel-body">
                <div class="quote-section" id="landQuoteSection">
                    <div class="quote-section-header">
                        <h3>Transporte terrestre</h3>
                    </div>
                    <div class="quote-field">
                        <label for="landVehicle">Tipo de vehículo</label>
                        <select id="landVehicle">
                            <option value="camioneta">Camioneta (hasta 6 pax)</option>
                            <option value="van">Van (hasta 12 pax)</option>
                            <option value="autobus">Autobús (hasta 40 pax)</option>
                        </select>
                    </div>
                    <div class="quote-field grid">
                        <div>
                            <label for="landSeats">Asientos requeridos</label>
                            <input type="number" id="landSeats" min="1" value="4" />
                        </div>
                        <div>
                            <label for="landDate">Día del viaje</label>
                            <input type="date" id="landDate" />
                        </div>
                        <div>
                            <label for="landDeparture">Hora de partida</label>
                            <input type="time" id="landDeparture" />
                        </div>
                    </div>
                    <div class="seat-map" id="seatMap"></div>
                </div>
                <div class="quote-section hidden" id="seaQuoteSection">
                    <div class="quote-section-header">
                        <h3>Transporte marítimo</h3>
                    </div>
                    <div class="quote-field">
                        <label for="seaSeatType">Tipo de asiento</label>
                        <select id="seaSeatType">
                            <option value="estandar">Estándar</option>
                            <option value="premium">Premium</option>
                            <option value="vip">VIP</option>
                        </select>
                    </div>
                    <div class="quote-field">
                        <label for="seaSeats">Pasajeros en ferri</label>
                        <input type="number" id="seaSeats" min="1" value="4" />
                    </div>
                    <div class="quote-field">
                        <label for="seaDeparture">Hora de embarque</label>
                        <input type="time" id="seaDeparture" />
                    </div>
                </div>
                <div class="quote-summary" id="quoteSummary"></div>
                <button type="button" class="quote-confirm">Confirmar cotización</button>
            </div>
        </div>
        <div class="payment-panel hidden" id="paymentPanel">
            <div class="payment-panel-header">
                <div>
                    <h2>Confirmación de pago</h2>
                </div>
                <div class="card-logos">
                    <span class="card-logo visa" aria-label="Visa"></span>
                    <span class="card-logo mastercard" aria-label="Mastercard"></span>
                    <span class="card-logo amex" aria-label="American Express"></span>
                </div>
                <button type="button" class="payment-panel-close" aria-label="Cerrar panel">
                    <span class="material-symbols-rounded">close</span>
                </button>
            </div>
            <form class="payment-panel-body" id="paymentForm" novalidate>
                <div class="payment-field">
                    <label for="cardName">Nombre en la tarjeta</label>
                    <input type="text" id="cardName" autocomplete="cc-name" placeholder="Como aparece en la tarjeta" required />
                    <small class="field-error" data-for="cardName"></small>
                </div>
                <div class="payment-field">
                    <label for="cardNumber">Número de tarjeta</label>
                    <input type="text" id="cardNumber" inputmode="numeric" autocomplete="cc-number" maxlength="23" placeholder="0000 0000 0000 0000" required />
                    <small class="field-error" data-for="cardNumber"></small>
                </div>
                <div class="payment-field payment-field--split">
                    <div>
                        <label for="cardExpiry">MM/AA</label>
                        <input type="text" id="cardExpiry" inputmode="numeric" autocomplete="cc-exp" placeholder="MM/AA" required />
                        <small class="field-error" data-for="cardExpiry"></small>
                    </div>
                    <div>
                        <label for="cardCvv">CVV</label>
                        <input type="password" id="cardCvv" inputmode="numeric" autocomplete="cc-csc" maxlength="4" placeholder="***" required />
                        <small class="field-error" data-for="cardCvv"></small>
                    </div>
                </div>
                <div class="payment-field">
                    <label for="cardEmail">Correo para el recibo</label>
                    <input type="email" id="cardEmail" autocomplete="email" placeholder="nombre@ejemplo.com" required />
                    <small class="field-error" data-for="cardEmail"></small>
                </div>
                <div class="payment-feedback" id="paymentFeedback"></div>
                <div class="payment-panel-actions">
                    <button type="button" class="payment-cancel">Cancelar</button>
                    <button type="submit" class="payment-submit">Confirmar pago</button>
                </div>
            </form>
        </div>
        <div class="map-area">
            <div id="map"></div>
        </div>
    </div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <!-- Custom Map Logic -->
    <script src="~/js/map-logic.js"></script>
    <script src="~/js/seat-map.js"></script>

    <script>
        // Serialize C# model data to JSON and pass to JS function
        var locations = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Locations, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }));
        
        // Wait for map logic to load then init markers
        window.addEventListener('load', function() {
            if (window.initMapMarkers) {
                window.initMapMarkers(locations);
            }
        });
    </script>
</body>
</html>
